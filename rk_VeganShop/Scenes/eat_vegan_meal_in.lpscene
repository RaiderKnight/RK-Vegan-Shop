WHEN: 0 - 24
WHO: none
OTHER: none

    SceneStart()
    
    If  stock_veganmeal < 1 
        Player(Anxious)::"Ok, no vegan meal to eat! So, I need to go shop to the greengrocer if I want to eat healthy !"
    Else
        
        // Get current vegan meal types
        VMeal1 = Player.getActorVar(rk_VMeal1)
        VMeal2 = Player.getActorVar(rk_VMeal2)
        VMeal3 = Player.getActorVar(rk_VMeal3)
        VMeal4 = Player.getActorVar(rk_VMeal4)
        VMeal5 = Player.getActorVar(rk_VMeal5)
