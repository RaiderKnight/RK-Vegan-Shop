            fitness += 1
            intelligence += 1
            attractiveness += 1
            
        
        Elseif 2
            Player.modifyActorVar(rk_VMeal3, -1)
            stock_veganmeal -= 1.25
            mood += 5
            energy += 5
            fitness += 2
            intelligence += 1.25
            attractiveness += 1.5
            
        
        Elseif 3
            Player.modifyActorVar(rk_VMeal4, -1)
