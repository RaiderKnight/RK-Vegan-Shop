        7:: stock_veganmeal >= 2.5:: "Veggie Lo Mein (-2.5 Vmeal)"
        8:: "Bah! I'm not hungry !"
        
        If 0
            Player.modifyActorVar(rk_VMeal1, -1)
            stock_veganmeal -= 0.5
            mood += 1
            energy += 2
            fitness += 0.5
            intelligence += 0.5
            attractiveness += 0.05
            
            
        Elseif 1
